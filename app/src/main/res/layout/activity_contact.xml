<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_above="@+id/bottomnavigationview"
    tools:context=".contact">

 <android.support.v7.widget.Toolbar
     android:layout_width="match_parent"
     android:layout_height="?attr/actionBarSize"
     android:id="@+id/toolbar_in_contact"
     android:background="@color/colorPrimaryDark"
     ></android.support.v7.widget.Toolbar>
    <TextView
        android:layout_below="@id/toolbar_in_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call us"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:id="@+id/tv_call_us"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary_dark"
        />
    <Button
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_contact_us"
        android:text="+919866772552"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/tv_call_us"
        android:background="#008000"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_contact_us"
        android:text="Write us"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary_dark"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_margin="12dp"
        android:id="@+id/tv_write_us"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_us_card"
        android:layout_below="@id/tv_write_us"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="13dp"
        >
        <EditText
            android:layout_below="@id/tv_write_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/et_write_us"
            android:enabled="true"
            android:minLines="6"
            android:maxLines="6"
            android:isScrollContainer="true"
            android:hint="Tell us something more about it.."
            android:background="#fafafa"
            android:textIsSelectable="true"
            android:focusable="true"
            android:gravity="left|right"
            android:padding="24dp"
            android:layout_margin="8dp"

            />
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/write_us_card"
        android:id="@+id/button_write_us"
        android:text="Send email"
        android:background="#008000"
        android:textColor="#FFFFFF"
        android:layout_margin="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_website"
        android:text="Visit us at"
        android:layout_below="@id/button_write_us"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_margin="5dp"
        />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_website"
        android:layout_centerHorizontal="true"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="13dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/website_address"
            android:layout_below="@id/tv_website"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:text="www.aravind.com"
            />
    </android.support.v7.widget.CardView>
</RelativeLayout>