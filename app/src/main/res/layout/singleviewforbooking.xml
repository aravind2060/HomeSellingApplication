<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1_in_booking_history"
        android:layout_margin="3dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/icon"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/image_in_booking"
                />
            <TextView
                android:layout_below="@id/image_in_booking"
                android:id="@+id/Brokername_in_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Broker Name:"
                />
            <TextView
                android:layout_below="@id/Brokername_in_booking"
                android:id="@+id/Date_Of_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Purchase:"
                />
            <TextView
                android:layout_below="@id/Date_Of_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/price_in_booking"
                android:text="Price:"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>