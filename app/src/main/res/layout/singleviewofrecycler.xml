<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="13dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/home1"
                android:scaleType="fitXY"
                android:id="@+id/recycle_item_iamge"/>
            <TextView
                android:layout_below="@id/recycle_item_iamge"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:text="hii"
                android:layout_margin="6dp"
                android:textSize="13dp"
                android:id="@+id/recycle_item_textview"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_toRightOf="@id/recycle_item_textview"
                android:text="hhiii"
                android:layout_alignBaseline="@id/recycle_item_textview"
                android:id="@+id/price_in_home"
                />

            <Button
                android:id="@+id/recycle_item_button_applynow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycle_item_iamge"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="7dp"
                android:layout_toRightOf="@id/price_in_home"
                android:background="#000"
                android:text="Apply Now"
                android:textColor="#fff" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>