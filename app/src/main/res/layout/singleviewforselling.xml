<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
      
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/image_in_selling"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"
                />
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/broker_in_selling"
                android:layout_below="@id/image_in_selling"
                android:text="Hi"
                android:layout_margin="3dp"
                android:textSize="23dp"
                />
              <TextView
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/price_in_selling"
                  android:layout_toRightOf="@id/broker_in_selling"
                  android:layout_below="@id/image_in_selling"
                  android:text="Rs."
                  android:textSize="23dp"
                  />
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/buy_now_in_selling"
                 android:layout_below="@id/image_in_selling"
                 android:layout_toRightOf="@id/price_in_selling"
                 android:layout_alignParentEnd="true"
                 android:text="Buy Now"
                 android:textColor="#fff"
                 android:background="#008000"
                 android:layout_margin="3dp"
                 />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>