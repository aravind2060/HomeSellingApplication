<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    tools:context=".calculator">
   <android.support.v7.widget.Toolbar
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       android:id="@+id/toolbar_in_calculator"
       android:background="@color/colorPrimaryDark"
       ></android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_below="@id/toolbar_in_calculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card1_in_emi"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="13dp"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                >
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Principal amount "
                    android:id="@+id/principal_amount"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card2_in_emi"
            android:layout_below="@id/card1_in_emi"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="13dp"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                >
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Rate of interest "
                    android:id="@+id/rate_of_interest"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card3_in_emi"
            android:layout_below="@id/card2_in_emi"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="13dp"

            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                >
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Time in Years "
                    android:id="@+id/time_in_interest"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card4_in_emi"
            android:layout_below="@id/card3_in_emi"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="13dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_layout_3"
                android:background="#000"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text=" Calculate Emi "
                android:id="@+id/calculate_emi"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card4_in_emi"
            android:id="@+id/card5_in_emi"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="13dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card4_in_emi"
                android:text=" Monthly Amount: "
                android:id="@+id/Monthly_result"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card6_in_emi"
            android:layout_below="@id/card5_in_emi"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="13dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Monthly_result"
                android:text=" Principal Amount: "
                android:id="@+id/principal_result"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card7_in_emi"
            android:layout_below="@id/card6_in_emi"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="13dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/principal_result"
                android:text=" Interest Amount: "
                android:id="@+id/interest_result"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card8_in_emi"
            android:layout_below="@id/card7_in_emi"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="13dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/interest_result"
                android:text=" Total Amount: "
                android:id="@+id/total_result"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomnavigationview"
        app:menu="@menu/bottom"
        android:soundEffectsEnabled="true"
        android:configChanges="orientation|screenSize"
        app:layout_scrollFlags="scroll|enterAlways"
        android:fitsSystemWindows="true" />
</RelativeLayout>