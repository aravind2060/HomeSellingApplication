<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selling">
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/toolbar_in_selling"
    android:background="@color/colorPrimaryDark"
    ></android.support.v7.widget.Toolbar>
   <android.support.v7.widget.CardView
       android:layout_below="@id/toolbar_in_selling"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/card1_in_selling"
       app:cardElevation="12dp"
       app:cardCornerRadius="12dp"
       app:cardUseCompatPadding="true"
       android:layout_margin="12dp"
       >
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:scaleType="fitXY"
           android:id="@+id/image_selling"
           />
   </android.support.v7.widget.CardView>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_layout_1_selling"
        android:layout_below="@id/card1_in_selling"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price "
            android:id="@+id/price_From_selling"
            android:singleLine="true"
            android:inputType="number"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_layout_2_selling"
        android:layout_below="@id/text_layout_1_selling"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address "
            android:singleLine="true"
            android:id="@+id/Address_From_selling"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_from_seller"
        android:layout_below="@id/text_layout_2_selling"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Submit"
        android:textColor="#fff"
        android:background="#000"
        />
</RelativeLayout>