<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    tools:context=".signup">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1_in_signup"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="13dp"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            app:errorEnabled="true"
            app:hintAnimationEnabled="true"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/email_in_signup"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                />
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="13dp"
        android:id="@+id/card2_in_signup"
        android:layout_below="@id/card1_in_signup"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout2"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="text"
                android:id="@+id/username_in_signup"
                android:singleLine="true"
                />

        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card3_in_signup"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="13dp"
        android:layout_below="@id/card2_in_signup"
        >


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:id="@+id/layout3"
            app:counterEnabled="true"
            app:counterMaxLength="12"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/password_in_signup"
                android:inputType="textPassword"
                android:singleLine="true"
                />
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="13dp"
        android:id="@+id/card4_in_signup"
        android:layout_below="@id/card3_in_signup"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:id="@+id/layout4"
            app:counterEnabled="true"
            app:counterMaxLength="12"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/confirm_password_in_siginup"
                />
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="13dp"
        android:id="@+id/card5_in_signup"
        android:layout_below="@id/card4_in_signup"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout5"
            app:counterMaxLength="10"
            app:counterEnabled="true"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:id="@+id/phone_signup"
                android:singleLine="true"
                />
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="13dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="20dp"
        android:id="@+id/card6_in_signup"
        android:layout_below="@id/card5_in_signup"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card5_in_signup"
            android:text="Sign up"
            android:id="@+id/button_signup"
            android:background="#000"
            android:textColor="#fff"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>
</RelativeLayout>