<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".LoginActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card1_in_login"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="13dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logohome"
            android:scaleType="fitXY"
            />
    </android.support.v7.widget.CardView>
     <android.support.v7.widget.CardView
         android:layout_below="@id/card1_in_login"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:cardElevation="13dp"
         app:cardUseCompatPadding="true"
         app:cardCornerRadius="20dp"
         android:id="@+id/card2_in_login"
         android:layout_marginLeft="45dp"
         >
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Sign in"
                 android:id="@+id/signin"
                 android:padding="12dp"
                 android:background="#000"
                 android:textColor="#fff"
                 />
     </android.support.v7.widget.CardView>
     <android.support.v7.widget.CardView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/card2_in_login"
         android:layout_below="@id/card1_in_login"
         android:layout_alignBaseline="@id/card2_in_login"
         app:cardElevation="13dp"
         app:cardUseCompatPadding="true"
         app:cardCornerRadius="20dp"
         >
         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/signup"
             android:text="Signup"
             android:textColor="#fff"
             android:background="#000"
             />
     </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/framelayout_in_login_activity"
        android:layout_below="@id/card2_in_login"
        >
    </FrameLayout>
</RelativeLayout>
</ScrollView>